@{
    Layout = null;
}

<script src="@Url.Content("~/Content/Dropzone/dropzone.js")" type="text/javascript"></script>
     
<link href="@Url.Content("~/Content/Dropzone/dropzone.css")"  rel="stylesheet" type="text/css" />
    <title>UploadFiles</title>


        <div>
            @using (Html.BeginForm("upload", "Staff", FormMethod.Post, new { enctype = "multipart/form-data", id = "uploadDemo", @class = "dropzone" }))
            {
                <div class="fallback row-fluid">
                    <input name="file" type="file" multiple />
                    <input type="submit" value="Upload" />
                </div>
            }
        </div>
  

<script type="text/javascript">
  //  $.noConflict(true);
    // "uploadDemo" is the camelized version of the HTML form's ID
    Dropzone.options.uploadDemo = {
        paramName: "file", // Must match the name of the HttpPostedFileBase argument that the Upload action expects.
        maxFileSize: 100 //MB
    };
</script>