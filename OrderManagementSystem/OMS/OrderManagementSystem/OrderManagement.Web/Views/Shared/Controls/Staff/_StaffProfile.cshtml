<div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Orders</h5>
                </div>
                <div class="ibox-content">

                    @if (Model != null)
                    {
                        int newjod = 0;

                        {
                            newjod = Model.OrderTracking.OrderByDescending(m => m.Created).Count();
                        }
                        <span> New Jobs Arrived:@newjod </span>
                        
                        <table id="Ordertrackgrid">
                            <thead>
                                <tr>
                                      <th>Order Id</th>
                                    <th>Company</th>
                                    <th>Property</th>
                                    <th>Status</th>
                                    <th>Required Date</th>
                                    <th>Date</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderTracking)
                                {
                                    <tr>
                                        <td>
                                            @item.OrderId

                                        </td>
                                        <td>
                                           
                                            @if (item.CompanyName != null)
                                            {
                                                @item.CompanyName
                                            }
                                        </td>
                                        <td>
                                            @item.PropertyName

                                        </td>
                                        <td>@item.Status</td>
                                        <td>@item.RequiredDate.ToString("MM/dd/yyyy")</td>
                                         <td>@item.Created.ToString("MM/dd/yyyy")</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    }

                </div>
            </div>
        </div>

