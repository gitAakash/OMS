@model OrderManagement.Web.Contact
@using System.Diagnostics

<script type="text/javascript" src="@Url.Content("~/Scripts/kendo/2014.2.716/jquery.min.js")"></script>
<script src="@Url.Content("~/Scripts/kendo/2014.2.716/kendo.web.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/kendo/2014.2.716/kendo.common.min.css")"  rel="stylesheet" type="text/css" />
<link type="text/css" href="@Url.Content("~/Content/kendo/2014.2.716/kendo.flat.min.css")" rel="stylesheet" />
<link type="text/css" href="@Url.Content("~/Content/custom.css")" rel="stylesheet" />

@if (Model != null)
{
    <table id="OrderContactsItemgrid" class="table-custom">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    @if (Model.Name != null)
                    {
                        <span style="cursor: pointer;" id="@Model.Row_Id">@Model.Name</span>
                    }
                </td>
                <td>
                    @if (Model.Value != null)
                    {
                        <span style="cursor: pointer;">@Model.Value</span>
                    }
                </td>

                <td>
                    @if (Model.ContactType != null)
                    {
                        <span style="cursor: pointer;">@Model.ContactType</span>
                    }
                </td>

            </tr>


        </tbody>
    </table>
}

<script language="javascript" type="text/javascript">
    $(document).ready(function () {

        $("#OrderContactsItemgrid").kendoGrid({
            height: 230,
            width: 200,
            scrollable: true,
            sortable: true,
            // filterable: true,
            selectable: "single",
            //searchable : true,
            columns: [
                {
                    field: "Name",
                    title: "Value",
                    width: 50
                },
                {
                    field: "Value",
                    title: "Value",
                    width: 20
                },

            {
                field: "ContactType",
                title: "Type",
                width: 20
            }

            ],
            pageable: {
                pageSize: 05
            }
        });

    });
</script>

